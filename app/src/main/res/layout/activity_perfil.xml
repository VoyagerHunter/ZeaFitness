<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BotonRedondeado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_blue"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="171dp"
                android:layout_height="161dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_picture" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginTop="20dp"
                android:text="Modificar mi perfil"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <androidx.constraintlayout.utils.widget.MotionLabel
                android:id="@+id/tvNameHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Ingresa tu nombre"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/esmeralda"
                android:hint="Max"
                android:inputType="text"
                android:padding="20dp" />

            <androidx.constraintlayout.utils.widget.MotionLabel
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Ingresa tu apellido"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/esmeralda"

                android:hint="Caufield"
                android:inputType="text"
                android:padding="20dp" />

            <androidx.constraintlayout.utils.widget.MotionLabel
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Ingresa tu correo"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/esmeralda"
                android:hint="lifeIsStrange@itis.yes"
                android:inputType="text"
                android:padding="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvImageHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etNombre"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Sube tu foto de perfil"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnBrowse"
                    style="@style/BotonRedondeado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etNombre"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:text="BUSCAR"
                    android:textSize="20sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                style="@style/BotonRedondeado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etNombre"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:text="Guardar"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
